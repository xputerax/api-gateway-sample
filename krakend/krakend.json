{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/api/product/{resource}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://product:8080"],
          "url_pattern": "/api/{resource}",
          "encoding": "no-op"
        }
      ]
    },

    {
      "endpoint": "/api/auth",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://auth:8080"],
          "url_pattern": "/api/auth",
          "encoding": "no-op"
        }
      ]
    }
  ]
}